<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/fio_TextView"
        android:layout_width="match_parent"
        android:layout_height="24sp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Фукпке Икепкер Окепркер" />

    <TextView
        android:id="@+id/disabled_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_disabled"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="qwert2603" />

        <TextView
            android:id="@+id/phone_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:autoLink="phone"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_local_phone_black_24dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="89531112244" />

    </LinearLayout>

    <TextView
        android:id="@+id/lessonsDoneCount_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray_text"
        android:textSize="14sp"
        tools:text="26 проведенных занятий" />

    <TextView
        android:id="@+id/groups_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray_text"
        android:textSize="14sp"
        tools:text="* веб-71\n* веб-72" />

</LinearLayout>