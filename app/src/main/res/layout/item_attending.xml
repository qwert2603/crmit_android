<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/studentFio_TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="Краснов Илья Викторович" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/uploadStatus_FrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="36dp">

            <ProgressBar
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="6dp"
                android:indeterminateTint="@android:color/black" />

            <ImageView
                android:id="@+id/uploadError_ImageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:src="@drawable/ic_warning_black_24dp"
                android:tint="@color/colorAccent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="6dp"
                android:src="@drawable/ic_done_black_24dp"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <com.qwert2603.crmit_android.util.AttendingStateView
            android:id="@+id/attendingStateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

</LinearLayout>